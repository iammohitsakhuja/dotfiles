# Git configuration for delta pager and diff enhancements
[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	features = diff-so-fancy
	navigate = true
	line-numbers = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse