# Git configuration for delta pager and diff enhancements
[core]
	# Set delta as the pager for all utilities that interact with git.
	pager = delta

[interactive]
	# Use color-only mode when interacting with git.
	diffFilter = delta --color-only

[delta]
	# Set common delta options which will be applied everywhere delta is invoked from.
	features = diff-so-fancy
	navigate = true
	line-numbers = true

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
